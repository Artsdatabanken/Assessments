@model TableOfContentsViewModel

<div id="@nameof(Constants.HeadingsNo.TableOfContents)" class="table-of-contents">
    <h2><span>@Constants.HeadingsNo.TableOfContents</span></h2>
    <ul class="toc-list">
        @foreach (var heading in Model.Contents)
        {
            <li is-visible="heading.ShouldShow" class="toc-list-item">
                <a class="toc-link" href="#@heading.ElementId">
                    <span>@heading.Title</span>
                </a>
                @if (heading.SubContents != null && heading.SubContents.Count() != 0)
                {
                    <ul class="subheadings">
                        @foreach (var subHeading in heading.SubContents)
                        {
                            <li>
                                <a href="#@subHeading.ElementId">@subHeading.Title</a>
                            </li>
                        }
                    </ul>
                }
            </li>
        }
    </ul>
</div>
