@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.SelectedMenuItem = "Arter";
	IgnoreSection("PageMenu");
}

@section Styles
{
	<link rel="stylesheet" href="~/css/graphs.css">
	<link rel="stylesheet" href="~/css/listview.css">
	<link rel="stylesheet" href="~/css/assessment.css">
	<link rel="stylesheet" href="~/css/categorybar.css">
	<link rel="stylesheet" href="~/css/filter.css">
	<link rel="stylesheet" href="~/css/search.css">
	<link rel="stylesheet" href="~/css/toggleSwitch.css">
	<link rel="stylesheet" href="~/css/tabs.css">
	<link rel="stylesheet" href="~/css/alienSpecies.css">
	<link rel="stylesheet" href="~/css/riskMatrix.css">
	<link rel="stylesheet" href="~/css/feedbackForm.css">
	<link rel="stylesheet" href="~/css/map.css">
	@await RenderSectionAsync("Styles", required: false)
}

@section Breadcrumb
{
	@await RenderSectionAsync("Breadcrumb", required: false)
}

@RenderBody()

@section Scripts
{
	<script src="~/js/search.js" async></script>
	<script src="~/js/toggleStatView.js" async></script>
	<script src="~/js/assessmentTabs.js" async></script>
	<script src="~/js/tableCollapse.js" async></script>
	<script src="~/js/tableOfContents.js" async></script>
	<script src="~/js/speciesImages.js" async></script>
	@await RenderSectionAsync("Scripts", required: false)
}