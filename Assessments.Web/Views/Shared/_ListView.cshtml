@using Assessments.Web.Infrastructure.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ListViewViewModel

@{
    const string doorknockerClass = "door_knocker";
}

<ul class="@Model.AssessmentType.ToString().ToLowerInvariant() main_list_view" id="@Model.AssessmentType.ToString()">
    <li class="listheader @(Model.AssessmentType == AssessmentType.AlienSpecies2023 ? doorknockerClass : string.Empty)" id="listheader">
        <span></span>
        <span class="list_cell">Artsnavn</span>
        <span class="list_cell">Populærnavn</span>
        <span is-visible="Model.AssessmentType == AssessmentType.AlienSpecies2023" class="mobile_hide list_doorknocker"></span>
        <span class="list_cell">Kategori</span>
    </li>

    @if (Model.Results?.Count > 0)
    {
        @foreach (var item in Model.Results)
        {
            var showIsDoorKnockerOrHasEffectWithoutReproduction = @Model.AssessmentType == AssessmentType.AlienSpecies2023 && (item.IsDoorKnocker || item.HasEffectWithoutReproduction);

            <li class="list @item.SpeciesGroup.ToLower() @item.EvaluationContext @(Model.AssessmentType == AssessmentType.AlienSpecies2023 ? doorknockerClass : string.Empty)">
                <a asp-action="Detail" asp-route-id="@item.Id">
                    <div class="svalbarcontainer">
                        <span class="svalbard">Svalbard</span>
                    </div>

                    <div class="element_icon list_cell">
                        @if (!string.IsNullOrEmpty(item.SpeciesGroup))
                        {
                            <img src="@item.SpeciesGroupIconUrl" onerror="this.style.display = 'none';" alt="@item.SpeciesGroup">
                            <span class="speciesgroup_name">@item.SpeciesGroup.ToLowerInvariant()</span>
                        }
                    </div>

                    <span class="element_species">
                        <span class="element_scientific_name list_cell">@Html.Raw(item.ScientificNameFormatted)</span>
                        <span class="element_popular_name list_cell">@item.VernacularName</span>
                    </span>

                    <span is-visible="Model.AssessmentType == AssessmentType.AlienSpecies2023" class="mobile_hide list_doorknocker">
                        <span is-visible="showIsDoorKnockerOrHasEffectWithoutReproduction">
                            <span class="material-symbols-outlined">
                                door_open
                            </span>
                            <span>dørstokkart</span>
                        </span>
                    </span>

                    <div class="risk-category-container">
                        <div class="@item.CategoryShort[..2] risk-category-circle">
                            <span class="risk-category-tag-label">@item.CategoryShort</span>
                        </div>
                        <span class="capitalized risk-category-label">
                            @if (!string.IsNullOrEmpty(item.Category))
                            {
                                @item.Category
                                <span class="degrees">@Helpers.FindDegrees(item.CategoryShort, false)</span>
                            }
                        </span>
                    </div>
                </a>
            </li>
        }
    }
    else
    {
        <li class="no_results mobile_padding">@Model.NoResultString</li>
    }
</ul>

<div class="mobile_padding">
    <partial name="/Views/Shared/_Paginator.cshtml" />
</div>